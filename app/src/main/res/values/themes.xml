<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme"></style>

    <style name="AppTheme.Application" parent="@style/Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/active</item>
        <item name="colorBackgroundFloating">@color/dialog_background</item>
        <item name="android:colorBackgroundFloating">@color/dialog_background</item>
    </style>

    <style name="AppTheme.NotificationButton">
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/inactive</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.QuickActionsDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:colorBackground">@color/dialog_background</item>
    </style>
</resources>